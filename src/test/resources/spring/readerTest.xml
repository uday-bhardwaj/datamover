<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="reader" class="com.arekusu.datamover.reader.XMLFileEntityReader">
        <property name="transportFile" value="classpath:/transportFiles/simpleTransportFile.xml"/>
        <property name="filter" ref="entityFilter"/>
    </bean>

    <bean id="entityFilter" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg name="classToMock" value="com.arekusu.datamover.reader.filter.EntityFilter"/>
    </bean>
</beans>